# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# JavaScript/TypeScript files
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg}]
indent_style = space
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 4

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# VS Code settings
[.vscode/*.json]
indent_style = space
indent_size = 2

# Package files
[package*.json]
indent_style = space
indent_size = 2

# Docker compose
[docker-compose*.{yml,yaml}]
indent_style = space
indent_size = 2