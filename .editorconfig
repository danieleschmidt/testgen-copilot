# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# VS Code settings
[.vscode/*.json]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# License and legal files
[{LICENSE,NOTICE,COPYRIGHT}]
trim_trailing_whitespace = false