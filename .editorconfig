# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# TypeScript/JavaScript files
[*.{js,ts,jsx,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Makefile
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2