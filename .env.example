```
# TestGen Copilot Assistant - Environment Configuration Template

# =============================================================================
# Core Configuration
# =============================================================================

# Environment (development, staging, production)
TESTGEN_ENV=development

# Logging configuration
TESTGEN_LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/testgen.log

# Development mode settings
TESTGEN_DEV_MODE=false
DEBUG_MODE=false
DEBUG_PORT=5678

# Directory configuration
TESTGEN_DATA_DIR=~/.testgen
TESTGEN_CACHE_DIR=.cache
TESTGEN_CONFIG_PATH=.testgen.config.json
TESTGEN_TEMP_DIR=/tmp/testgen

# =============================================================================
# AI/LLM Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.2

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Azure OpenAI Configuration (alternative)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Local LLM Configuration (Ollama, etc.)
LOCAL_LLM_ENABLED=false
LOCAL_LLM_HOST=localhost
LOCAL_LLM_PORT=11434
LOCAL_LLM_MODEL=codellama:7b

# =============================================================================
# Testing Configuration
# =============================================================================

# Default test framework preferences
DEFAULT_TEST_FRAMEWORK_PYTHON=pytest
DEFAULT_TEST_FRAMEWORK_JS=jest
DEFAULT_TEST_FRAMEWORK_JAVA=junit5

# Pytest configuration
PYTEST_WORKERS=auto
TEST_TIMEOUT=300

# Coverage targets (percentage)
DEFAULT_COVERAGE_TARGET=85
MIN_COVERAGE_TARGET=70
MAX_COVERAGE_TARGET=95
COVERAGE_TARGET=80
QUALITY_TARGET=85

# Test generation preferences
ENABLE_EDGE_CASE_TESTS=true
ENABLE_ERROR_PATH_TESTS=true
ENABLE_BENCHMARK_TESTS=false
ENABLE_INTEGRATION_TESTS=true

# Benchmarking configuration
BENCHMARK_SAVE_DATA=true
BENCHMARK_COMPARE=true
BENCHMARK_THRESHOLD=1.5

# Testing configuration for the tool itself
TEST_API_RESPONSES=false
MOCK_LLM_RESPONSES=false
ENABLE_TEST_FIXTURES=true

# =============================================================================
# Security Configuration
# =============================================================================

# Security scanning preferences
ENABLE_SECURITY_SCAN=true
SECURITY_RULES_STRICT=false
SECURITY_SCAN_TIMEOUT=300

# Security tool configuration
BANDIT_CONFIG_FILE=.bandit
SAFETY_DB_PATH=.safety_db
VULNERABILITY_DB_URL=https://api.osv.dev
SECURITY_RULES_PATH=security/rules

# OWASP rules configuration
ENABLE_SQL_INJECTION_DETECTION=true
ENABLE_XSS_DETECTION=true
ENABLE_AUTH_BYPASS_DETECTION=true
ENABLE_DATA_EXPOSURE_DETECTION=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Resource limits
MAX_MEMORY_MB=2048
MEMORY_LIMIT_MB=1024
MAX_CPU_CORES=4
MAX_FILE_SIZE_MB=50
MAX_ANALYSIS_TIME_SECONDS=300

# Caching configuration
ENABLE_CACHE=true
CACHE_TTL_HOURS=24
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=500

# Parallel processing
ENABLE_PARALLEL_PROCESSING=true
MAX_PARALLEL_JOBS=4
PARALLEL_WORKERS=4
MAX_CONCURRENT_JOBS=4

# Job management
MAX_QUEUE_SIZE=100
JOB_TIMEOUT=1800
CLEANUP_INTERVAL=3600

# =============================================================================
# Output Configuration
# =============================================================================

# Output format preferences
DEFAULT_OUTPUT_FORMAT=standard
ENABLE_COLORED_OUTPUT=true
ENABLE_PROGRESS_BAR=true
ENABLE_VERBOSE_LOGGING=false

# File output preferences
AUTO_SAVE_TESTS=false
BACKUP_EXISTING_TESTS=true
TEST_FILE_SUFFIX=_test

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Metrics configuration
ENABLE_METRICS=true
METRICS_PORT=8080
PROMETHEUS_ENDPOINT=/metrics

# Profiling configuration
ENABLE_PROFILING=false
ENABLE_PROFILER=false
ENABLE_MEMORY_TRACKING=false
PROFILER_OUTPUT_DIR=profiles

# =============================================================================
# VS Code Extension Configuration
# =============================================================================

# Extension preferences
VSCODE_ENABLE_REAL_TIME=false
VSCODE_SUGGESTION_DELAY_MS=500
VSCODE_MAX_SUGGESTIONS=10
ENABLE_VS_CODE_INTEGRATION=true

# =============================================================================
# CI/CD Configuration
# =============================================================================

# CI mode preferences
CI_MODE=false
CI_FAIL_ON_LOW_COVERAGE=true
CI_FAIL_ON_SECURITY_ISSUES=true
CI_GENERATE_REPORTS=true

# GitHub integration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPOSITORY=owner/repo

# Notification webhooks
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
TEAMS_WEBHOOK_URL=your_teams_webhook_url_here

# Report generation
GENERATE_HTML_REPORT=false
GENERATE_JSON_REPORT=true
GENERATE_XML_REPORT=false

# =============================================================================
# Database Configuration (future)
# =============================================================================

DATABASE_URL=sqlite:///testgen.db
REDIS_URL=redis://localhost:6379/0
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30

# =============================================================================
# Web Interface Configuration (future)
# =============================================================================

WEB_HOST=localhost
WEB_PORT=8000
WEB_DEBUG=false
SECRET_KEY=your_secret_key_here
SESSION_TIMEOUT=3600

# =============================================================================
# Plugin Configuration
# =============================================================================

PLUGIN_PATH=plugins
ENABLE_EXTERNAL_PLUGINS=false
PLUGIN_TIMEOUT=60

# =============================================================================
# Network Configuration
# =============================================================================

# Proxy settings (if behind corporate firewall)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Request timeouts
API_REQUEST_TIMEOUT_SECONDS=30
FILE_DOWNLOAD_TIMEOUT_SECONDS=60

# =============================================================================
# License and Compliance
# =============================================================================

# License configuration
LICENSE_CHECK_ENABLED=true
ALLOWED_LICENSES=MIT,Apache-2.0,BSD-3-Clause,ISC

# Compliance settings
GDPR_COMPLIANCE_MODE=false
AUDIT_LOGGING_ENABLED=false

# =============================================================================
# Feature Flags
# =============================================================================

# Core features
ENABLE_AI_GENERATION=true
ENABLE_SECURITY_SCANNING=true
ENABLE_COVERAGE_ANALYSIS=true
ENABLE_QUALITY_SCORING=true
ENABLE_BENCHMARKING=false

# Experimental features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_MUTATION_TESTING=false
ENABLE_VISUAL_REGRESSION_TESTS=false
ENABLE_AI_CODE_REVIEW=false

# Beta features
ENABLE_MULTI_LANGUAGE_ANALYSIS=true
ENABLE_CUSTOM_RULES=false
ENABLE_TEAM_COLLABORATION=false

# Development tools
ENABLE_DEBUG_MODE=false
```
